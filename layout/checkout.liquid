<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <meta name="referrer" content="origin">

    <title>{{ page_title }}</title>

    {{ content_for_header }}

    {{ checkout_stylesheets }}
    {{ checkout_scripts }}
    {{ 'checkout.css' | asset_url | stylesheet_tag }}
  
  {% render 'shogun-head' %}
</head>
  <body>   

    <div id="main-checkout-content">
      {{ skip_to_content_link }}
      <header class="banner" data-header role="banner">
        <div class="wrap">
          {{ content_for_logo }}
        </div>
      </header>

      {{ order_summary_toggle }}
      <div class="content" data-content>
        <div class="wrap">
          <div class="main">
            <header class="main__header" role="banner">
              {{ content_for_logo }}
              {{ breadcrumb }}
              {{ alternative_payment_methods }}
            </header>
            <main class="main__content" role="main">
              {{ content_for_layout }}
              
              <div class="main__benefits checkout-benefits-container">
                {% for i in (1..3) %}
                  {% capture icon %}icon_{{ i }}{% endcapture %}
                  {% capture title %}title_{{ i }}{% endcapture %}
                  {% capture content %}content_{{ i }}{% endcapture %}
                  {% if settings[title] != balnk or settings[content] != balnk %}
                  <div class="checkout-benefits">
                    {% if settings[icon] != blank %}
                    <div class="checkout-benefits__icon">
                      <img src="{{ settings[icon] | img_url: '80x' }}" height="24" width="24" alt="{{ settings[icon].alt }}">
                    </div>
                    {% endif %}
                    <div class="checkout-benefits__content">
                      {% if settings[title] != balnk %}
                      <div class="checkout-benefits__header">
                        {{ settings[title] }}
                      </div>
                      {% endif %}
                      {% if settings[content] != balnk %}
                      <div class="checkout-benefits__blurb">
                        {{ settings[content] }}
                      </div>
                      {% endif %}
                    </div>
                  </div>
                  {% endif %}
                {% endfor %}
              </div>
              
            </main>
            <footer class="main__footer" role="contentinfo">
              {{ content_for_footer }}
            </footer>
          </div>
          <aside class="sidebar" role="complementary">
            <div class="sidebar__header">
              {{ content_for_logo }}
            </div>
            <div class="sidebar__content">
              {{ content_for_order_summary }}
                 <div>
                   <p style="color: #e31d93; font-size:11.5px;">***Your purchase will be converted to the equivalent value in Australian Dollars</p>
                   </div> 
              <div class="sidebar__benefits checkout-benefits-container">
              {% for i in (1..3) %}
                {% capture icon %}icon_{{ i }}{% endcapture %}
                {% capture title %}title_{{ i }}{% endcapture %}
                {% capture content %}content_{{ i }}{% endcapture %}
                {% if settings[title] != balnk or settings[content] != balnk %}
                <div class="checkout-benefits">
                  {% if settings[icon] != blank %}
                  <div class="checkout-benefits__icon">
                    <img src="{{ settings[icon] | img_url: '80x' }}" height="24" width="24" alt="{{ settings[icon].alt }}">
                  </div>
                  {% endif %}
                  <div class="checkout-benefits__content">
                    {% if settings[title] != balnk %}
                    <div class="checkout-benefits__header">
                      {{ settings[title] }}
                    </div>
                    {% endif %}
                    {% if settings[content] != balnk %}
                    <div class="checkout-benefits__blurb">
                      {{ settings[content] }}
                    </div>
                    {% endif %}
                  </div>
                </div>
                {% endif %}
              {% endfor %}
              </div>

            </div>
          </aside>
        </div>
      </div>
    </div>
    {{ tracking_code }}
  </body>
</html>
