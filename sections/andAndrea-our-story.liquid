<style>
  #fashion-section {
    padding: 60px 0;
  }
  #fashion-section .section-title {
    font-size: 40px;
    line-height: 50px;
    font-weight: 700;
    color: #000;
    margin-bottom: 48px;
  }
  #fashion-section .banner-row {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
  }
  #fashion-section .banner-col {
    width: 50%;
  }

  #fashion-section .banner-col.col-right {
    padding-left: 85px;
  }
  #fashion-section .banner-col.col-right .content-area {
    margin-bottom: 60px;
  }
  #fashion-section .banner-col.col-right .content-area:last-child {
    margin-bottom: 0;
  }
  #fashion-section .banner-col.col-right .content-area h3 {
    text-align: left;
    font-size: 20px;
    line-height: 35px;
    font-weight: 600;
    margin-bottom: 0;
    color: #000;
  }
  #fashion-section .banner-col.col-right .content-area p {
    margin-top: 0;
    font-size: 16px;
    line-height: 21px;
    color: #000;
  }

  #fashion-section a {
    border: 2px solid #E21C94;
    border-radius: 36px;
    font-size: 20px;
    line-height: 1;
    max-width: 273px;
    width: 100%;
    height: 53px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    color: #E21C94;
  }
  #fashion-section a:hover{
    background-color: #E21C94;
    color: #fff; 
  }
  
  @media screen and (max-width:767px){
    #fashion-section {
      padding: 30px 0 0;
    }
    #fashion-section .section-title {
      font-size: 28px;
      line-height: 37px;
      max-width: 294px;
      margin: 0 auto 12px;
    }
    #fashion-section .container {
      width: 100%;
    }
    #fashion-section .banner-col {
      width: 100%;
      order: 2;
    }
    #fashion-section .banner-col .ftr-img {
      margin-bottom: 0;
    }
    #fashion-section .banner-col.col-right {
      padding: 0 15px 0;
      order: 1;
      max-width: 340px;
      width: 100%;
      display: block;
      margin: 25px auto;
    }
    #fashion-section a {
      margin: 0 auto;
    }
    #fashion-section .banner-col.col-right .content-area {
      margin-bottom: 32px;
    }
  }
</style>
  
  <div id="fashion-section">
    <div class="container">

      <h2 class="section-title">
        {{ section.settings.section_title }}
      </h2>

      <div class="banner-row">
        <div class="banner-col col-left">
            {%- if section.settings.feature_image -%}
            <img src="{{ section.settings.feature_image | img_url:'' }}" class="ftr-img"/>
            {%- endif -%}
        </div>
        
        
        <div class="banner-col col-right">
          
            {% for block in section.blocks %}
            {% case block.type %}
            {% when 'Content' %}
              <div class="content-area">
                <h3>
                  {{ block.settings.content_title }}
                </h3>

                <p>{{ block.settings.content_paragraph }}</p>
              </div>
            {% endcase %}
            {% endfor %}

            {% if section.settings.sect_button_label !='' %}
              <a href="{{ section.settings.sect_button_link }}" >
                {{ section.settings.sect_button_label }}
              </a>
            {% endif %}
          
        </div>
      </div>
      
    </div>
  </div>
  
  
  {% schema %}
      {
          "name": "andAndrea Our Story",
          "class": "hero-banner-section",
          "settings": [
            {
              "type": "text",
              "id": "section_title",
              "label": "Section Title",
              "default": "Section Title"
            },
            {
              "type": "image_picker",
              "id": "feature_image",
              "label": "Feature Image"
            },
            {
              "type": "text",
              "id": "sect_button_label",
              "label": "Button Label",
              "default": "Read the full story"
            },
            {
              "type": "url",
              "id": "sect_button_link",
              "label": "Button Link"
            }
          ],
          "blocks": [
            {
            "name": "Content",
            "type": "Content",
            "settings": [
                {
                    "type": "text",
                    "id": "content_title",
                    "label": "Content Title",
                    "default": "Content Title"
                },
                {
                    "type": "textarea",
                    "id": "content_paragraph",
                    "label": "Content Text",
                    "default": "Content Text"
                }
              ]
            }
          ],
          "presets":[
            {
              "name":"andAndrea Our Story",
              "category":"Custom"
            }
          ]
      }
  {% endschema %}
  