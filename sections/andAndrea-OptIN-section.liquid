<style>
  #optin-section {
	background-color: #E21C93;
	padding: 31px 0;
}
#optin-section .sect-title {
  font-size: 40px;
  line-height: 56px;
  color: #fff;
  font-weight: 700;
}
#optin-section .sec-description {
  font-size: 16px;
  line-height: 26px;
  text-align: center;
  font-weight: 400;
  color: #fff;
  margin: 12px 0 32px;
}
#optin-section .contact-form {
  display: flex;
  justify-content: center;
  align-items: center;
  max-width: max-content;
  width: 100%;
  margin: 0 auto;
  position: relative;
  flex-wrap: wrap;
  padding-right: 150px;
}
#optin-section .contact-form .email input {
  background: transparent;
  border-radius: 100px;
  border-width: 5px;
  border-color: #fff;
  color: #fff;
  font-size: 21px;
  line-height: 1;
  padding-top: 16px;
  padding-bottom: 16px;
  max-width: 358px;
  height: 52px;
  font-weight: 700;
  text-transform: unset;
  letter-spacing: unset;
}
#optin-section .contact-form .email input::placeholder{
  text-transform: uppercase;
  color: rgba(255,255,255,0.28);
  text-transform: unset;
}
#optin-section .contact-form .submit input {
  background-color: #fff;
  color: #e21c93;
  width: 193px;
  height: 52px;
  border-radius: 100px !important;
  padding: 16px;
  position: absolute;
  top: 0;
  right: 0;
  border: none;
  font-size: 21px !important;
  line-height: 1;
  font-weight: 700;
  text-transform: unset;
  letter-spacing: unset;
}

@media screen and (max-width: 767px){
  #optin-section .sect-title {
    font-size: 28px;
    line-height: 35px;
    max-width: 240px;
    margin: 0 auto;
  }
  #optin-section .sec-description {
    margin: 12px auto 32px;
    max-width: 295px;
  }
  #optin-section .contact-form {
    padding-right: 0;
  }
  #optin-section .contact-form .submit {
    max-width: 358px;
    width: 100%;
    margin-top: 10px;
  }
  #optin-section .contact-form .submit input {
    width: 100%;
    position: relative;
  }
}
</style>

<div id="optin-section">
  <div class="container">
    <h2 class="sect-title">
      {{ section.settings.sect_title}}
    </h2>

    <p class="sec-description">
      {{ section.settings.sect_description }}
    </p>

    {% form 'contact' %}
      {{ form.errors | default_errors }}
      <div class="email">
        <input type="email" name="contact[email]" id="email" placeholder="Email"/>
      </div>
      <div class="submit">
        <input type="submit" value="Sign Up" />
      </div>
    {% endform %}

  </div>
</div>

{% schema %}
  {
    "name": "andAndrea Optin",
    "class": "andandrea-optin-section",
    "settings": [
      {
        "type": "text",
        "id": "sect_title",
        "label": "Section Title",
        "default": "Let’s get this party started!"
      },
      {
        "type": "textarea",
        "id": "sect_description",
        "label": "Section Description",
        "default": "Drop your email below and get aA-Lister access to andAndrea’s Popup Party™."
      }
    ],
    "presets":[
        {
        "name":"andAndrea Optin",
        "category":"Custom"
        }
    ]
  }
{% endschema %}
