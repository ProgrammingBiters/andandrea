              {
                "type": "textarea",
                "id": "colorbox1_paragraph",
                "label": "Color Box Paragraph",
                "default": "Our collection is only available for select times throughout the year. Be inspired 365 days — shop when your wardrobe needs quality pieces you will love."
              },
              {
                "type": "header",
                "content": "Color Box 2"
              },
              {
                "type": "text",
                "id": "colorbox1_title2",
                "label": "Color Box Title",
                "default": "Better for you and our planet"
              },
              {
                "type": "textarea",
                "id": "colorbox1_paragraph2",
                "label": "Color Box Paragraph",
                "default": "Our collection is only available for select times throughout the year. Be inspired 365 days — shop when your wardrobe needs quality pieces you will love."
              },
              {
                "type": "header",
                "content": "Color Box 3"
              },
              {
                "type": "text",
                "id": "colorbox1_title3",
                "label": "Color Box Title",
                "default": "Better for you and our planet"
              },
              {
                "type": "textarea",
                "id": "colorbox1_paragraph3",
                "label": "Color Box Paragraph",
                "default": "Our collection is only available for select times throughout the year. Be inspired 365 days — shop when your wardrobe needs quality pieces you will love."
              }
          ],
          "presets":[
              {
              "name":"andAndrea Mindful Section",
