<style>
  #custom-banner{
    background-image: url("{{ section.settings.section_background_image | img_url: ''}}");
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      background-size: cover;
      }

  #custom-banner .banner-row {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  #custom-banner .col-left {
    max-width: 400px;
    width: 100%;
  }
  #custom-banner .col-right {
    max-width: 799px;
    width: 100%;
  }
  
  #custom-banner .section-title {
    color: #000 !important;
    margin-bottom: 12px;
  }
  

/* 
  #custom-banner form button {
    color: transparent !important;
    background-color: #e51e93 !important;
    border-radius: 5px !important;
  }
  #custom-banner form button::after {
    content: 'JOIN NOW';
    font-size: 16px;
    font-weight: 700;
    position: absolute;
    left: 0;
    right: 0;
    color: #ffffff;
  } */

  #custom-banner .needsclick.kl-private-reset-css-Xuajs1 {
    background-color: #ffffff !important;
  }
  #custom-banner .needsclick.go1890236623.kl-private-reset-css-Xuajs1 {
    height: 40px !important;
  }
  #custom-banner form input {
    border: none !important;
    border-bottom: 1px solid #D9D9D9 !important;
    border-radius: 0 !important;
  }
  #custom-banner form input::-webkit-input-placeholder {
    text-transform: uppercase;
  }

  #custom-banner form input:-ms-input-placeholder {
    text-transform: uppercase;
  }

  #custom-banner form input::placeholder {
    text-transform: uppercase;
  }
  #custom-banner .banner_featureIMG img {
    transform: scale(1.2);
    transform-origin: left;
    position: relative;
    left: 24px;
  }

  #custom-banner form {
    border-radius: 5px !important;
    padding: 20px !important;
    box-shadow: 5px 5px 12px 0 rgba(0,0,0,0.1) !important;
    background-color: #fff !important;
  }

  #custom-banner form .needsclick.go139254013.kl-private-reset-css-Xuajs1 {
    background-color: #e51e93 !important;
  }
  #custom-banner form .needsclick.go3109424697.kl-private-reset-css-Xuajs1 {
    background-color: #e51e93 !important;
  }
  #custom-banner form .needsclick.go279450927.kl-private-reset-css-Xuajs1 {
    background-color: #e51e93 !important;
    color: #ffffff !important;
    font-size: 14px !important;
    font-weight: 600 !important;
    border-radius: 5px !important;
  }
  #custom-banner form .needsclick.go3109184726.kl-private-reset-css-Xuajs1 {
    padding: 10px !important;
    height: 44px !important;
  }

  @media screen and (max-width: 1024px){
    #custom-banner .banner_featureIMG img {
      transform: scale(1);
      transform-origin: left;
      margin-top: 35px;
    }
  }

  @media screen and (max-width: 767px){
    #custom-banner {
      padding-top: 142px;
      padding-bottom: 340px;
      background-position: right;
    }
    #custom-banner .section-title {
      max-width: 257px;
      width: 100%;
      display: block;
      margin: 0 auto;
      font-size: 35px;
      line-height: 51px;
    }
    #custom-banner .banner-row {
      flex-wrap: wrap;
    }
    #custom-banner .banner_featureIMG img {
      left: 0;
    }
  }
</style>

<div id="custom-banner">
  <div class="container">
    
    <div class="banner-row">
      <div class="banner-col col-left">
        
        <div class="title-area">
          <h1 class="section-title">
            {{ section.settings.section_title }}
          </h1>
          
          <img src="{{ section.settings.custom_text_image | img_url: ''}}" class="textImage"/>

          <p class="section-description">
            {{ section.settings.section_description }}
          </p>

          <div class="buttons-div">
            <a href="{{ section.settings.button_1_link }}" class="hero-btn-1">
              {{ section.settings.button_1_label }}
            </a>

            <a href="{{ section.settings.button_2_link }}" class="hero-btn-1">
              {{ section.settings.button_2_label }}
            </a>
          </div>
        </div>

        <div class="klaviyo-form-XhKENf"></div>
        
      </div>
      
      
      <div class="banner-col col-right">
        <div class="banner_featureIMG">
          {%- if section.settings.custom_feature_image !='' -%}
          <img src="{{ section.settings.custom_feature_image | img_url:'' }}"/>
          {%- endif -%}
        </div>
      </div>
    </div>
    
  </div>
</div>


{% schema %}
    {
        "name": "Custom Banner Section",
        "class": "hero-banner-section",
        "settings": [
            {
                "type": "image_picker",
                "id": "section_background_image",
                "label": "Section Background Image"
            },
            {
                "type": "image_picker",
                "id": "custom_feature_image",
                "label": "Custom Feature Image"
            },
            {
                "type":"number",
                "id":"padding_top",
                "label":"Padding Top",
                "default": 70
            },
			{
                "type":"number",
                "id":"padding_bottom",
                "label":"Padding Bottom",
                "default": 70
            },
            {
                "type":"number",
                "id":"padding_top_bottom_tab",
                "label":"Padding Top-Bottom Tablet",
                "default": 50
            },
            {
                "type":"number",
                "id":"padding_top_bottom_mob",
                "label":"Padding Top-Bottom Mobile",
                "default": 40
            },
            {
                "type": "text",
                "id": "section_title",
                "label": "Section title",
                "default": "Section Title"
            },
			{
                "type": "image_picker",
                "id": "custom_text_image",
                "label": "Text Image"
            },
            {
                "type": "textarea",
                "id": "section_description",
                "label": "Section Description",
                "default": "Section description"
            },
            {
                "type": "text",
                "id": "button_1_label",
                "label": "Button 1 Label",
                "default": "Button 1 Label"
            },
            {
                "type": "url",
                "id": "button_1_link",
                "label": "Button 1 link"
            },
            {
                "type": "text",
                "id": "button_2_label",
                "label": "Button 1 Label",
                "default": "Button 1 Label"
            },
            {
                "type": "url",
                "id": "button_2_link",
                "label": "Button 2 link"
            }
        ],
        "presets":[
          {
            "name":"Custom Hero Banner",
            "category":"Custom"
          }
        ]
    }
{% endschema %}
