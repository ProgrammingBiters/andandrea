  #feature-image-section {
    position: relative;
    margin-bottom: 80px;
  }
  #feature-image-section .feature-content {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    margin-left: -16px;
    margin-right: -16px;
    position: relative;
  }
  #feature-image-section .feature-content::before {
    content: '';
    background-image: url('//cdn.shopify.com/s/files/1/0763/7883/files/brushedPaint.png?v=1658535225');
    background-size: 100% 100%;
    width: 388px;
    height: 197px;
    position: absolute;
    bottom: 78px;
    z-index: 2;
    display: block;
    left: 10%;
  }
  #feature-image-section .sec-title-image {
    position: absolute;
    bottom: -110px;
    left: 0;
    right: 0;
    display: block;
    margin: 0 auto;
    max-width: 644px;
    height: auto;
    width: 100%;
    z-index: 10;
  }
  #shopify-section-template--15346044600472__1657030913b3512f8f {
    position: relative;
    z-index: 40;
    margin-top: -240px;
  }

  #feature-image-section .feature-content .swiper-wrapper {
    padding-bottom: 186px;
  }
  #feature-image-section  .swiper-slide {
    transition: all 0.3s ease;
  }
  #feature-image-section  .swiper-slide.swiper-slide-active {
    transform: scale(1.2) translateY(45px);
    transform-origin: top center;
    z-index: 1;
