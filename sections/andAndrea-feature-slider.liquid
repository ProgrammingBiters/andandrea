    @media screen and (max-width: 1680px){
  
    }
    
    @media screen and (max-width: 1024px){
      #custom-testimonial-section {
        padding: 50px 0;
      }
    }
    
    @media screen and (max-width: 767px){
      #feature-image-section {
        position: relative;
        margin-bottom: 30px;
      }
      #feature-image-section .feature-content::before {
        background-size: 100% 100%;
        width: 220px;
        height: 115px;
        left: 0;
        right: 0;
        margin: 0 auto;
      }
      #feature-image-section .feature-content .swiper {
        padding: 0;
      }
      #feature-image-section .featureIMG {
        padding: 0;
      }
      #feature-image-section .feature-content .swiper-wrapper {
        padding-bottom: 25px;
        padding-top: 80px;
      }
      #feature-image-section .swiper-slide.swiper-slide-active {
        transform: scale(1.1) translateY(-20px);
        transform-origin: bottom left;
        z-index: 1;
      }
    }
  </style>
  
  <!-- Swiper -->
<div id="feature-image-section">
    <div class="container-fluid">

        {% if section.settings.section_title != '' %}
        <h2 class="sec-title">
            {{section.settings.section_title}}
        </h2>  
        {% endif %}
        

        {% if section.settings.image_heading %}
            <img src="{{ section.settings.image_heading | img_url: '' }}" class="sec-title-image"/>
        {% endif %}

        <div class="feature-content">
          <div class="swiper myFtrIMG">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
              {% case block.type %}
              {% when 'image' %}
              <div class="swiper-slide">
                <div class="featureIMG">
                  {% if block.settings.testimonial_image %}
                    <img src="{{ block.settings.testimonial_image | img_url: '' }}" class="testi-author">
                  {% endif %}
                </div>
              </div>
              {% endcase %}
              {% endfor %}
            </div>
          </div>
        </div>

    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/8.3.1/swiper-bundle.min.js"></script>
<!-- Initialize Swiper -->
<script>
  var swiper = new Swiper(".myFtrIMG", {
    slidesPerView: 2,
    spaceBetween: 0,
    centeredSlides: false,
    loop: true,
    roundLengths: true,
    breakpoints: {
      640: {
        slidesPerView: 2,
        centeredSlides: false,
        spaceBetween: 0,
      },
      768: {
        centeredSlides: false,
        slidesPerView: 2,
        spaceBetween: 0,
      },
      1024: {
        centeredSlides: true,
        slidesPerView: 3,
        spaceBetween: 0,
      },
    },//breakpoints
  });
</script>
  
  {% schema %}
      {
          "name": "andAndrea Image Slider",
          "class": "custom-image-section",
          "settings": [
              {
                "type": "text",
                "id": "section_title",
                "label": "Section Title",
                "default": "Section Title"
              },
              {
                "type": "image_picker",
                "id": "image_heading",
                "label": "Image Heading"
              }
              
          ],
          "blocks": [
              {
              "name": "Images",
              "type": "image",
              "settings": [
                  {
                    "type": "image_picker",
                    "id": "testimonial_image",
                    "label": "Image"
                  }
                ]
              }
          ],
          "presets":[
              {
              "name":"andAndrea Image Slider",
              "category":"Custom"
              }
          ]
      }
  {% endschema %}
  